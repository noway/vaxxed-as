{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "alwaysStrict": true,
    "checkJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react-jsxdev",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": false,
    "target": "es5"
  },
  "exclude": [
    "./cache/*",
    "./src/**/*.stories.*",
    "local_modules/*",
    "node_modules/*",
    "public/*",
    "publish/*",
    "static/*",
    "tailwind.config.js"
  ],
  "include": [
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
